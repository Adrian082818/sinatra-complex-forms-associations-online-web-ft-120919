<h2>Edits for <%=@pet.name%></h2>

<form action="/pets/<%=@pet.id%>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
<label>Edit the Pet's Name: </label>
<br>
<input type="text" name="pet[name]" value="<%=@pet.name%>">
<br>
<p>Select an existing pet or create an new one below.</p>

<h3>Existing Pets</h3>
<%@owners.all.each do |owner|%>
<input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner %>>
<%=owner.name%>
<%end%>
<label>Name: </label>
<input type="text" name="owner[name]" id="owner_name">
<br><br>

<input type="submit" value="Update Owner"><h1>Update Pet</h1>


